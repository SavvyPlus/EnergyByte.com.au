{{!-- Site footer --}}
<footer class="footer">
  <div class="container wrapper">
    <div class="footer__top p-t">
      <div class="row p-t border-bottom-1">
        <div class="col-xs-12 col-md-2">
          <div class="footer__title m-b-sm">{{t "Navigation"}}</div>
          {{navigation}}
        </div>
        <div class="col-xs-12 col-md-2">
          <div class="footer__title m-b-sm">{{t "Tags"}}</div>
          {{#get "tags" order="count.posts desc" limit="5"}}
            <div class="footer__tags flex flex-col m-b">
              {{#foreach tags}}
                <a href="{{url}}">{{name}}</a>
              {{/foreach}}
            </div>
          {{/get}}
        </div>
        <div class="col-xs-12 col-md-2">
          {{#if @site.secondary_navigation}}
            <div class="footer__title m-b-sm">{{t "Quick links"}}</div>
            {{navigation type="secondary"}}
          {{/if}}
        </div>
        <div class="col-xs-12 col-md-3">
            <div class="footer__title m-b-sm">{{t "Subscribe to our Newsletter"}}</div>
         <!--[if lte IE 8]>
            <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2-legacy.js"></script>
            <![endif]-->
            <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2.js"></script>
            <script>
                hbspt.forms.create({
                    portalId: "4524741",
                    formId: "2ae706e3-37e5-4b40-b611-970048e1338c"
                });
            </script>

        </div>
        <div class="col-xs-12 col-md-2 m-b">
          <div class="footer__title m-b-sm">{{@site.title}}</div>
          {{!--<div class="m-b">{{@site.description}}</div> --}}
          {{> social-media}}
        </div>
      </div>
    </div>
    {{!-- Footer Bottom --}}
    </div>
  </div>
</footer>
